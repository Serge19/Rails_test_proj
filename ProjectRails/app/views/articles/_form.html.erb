<%= form_for @article do |f|  %>

  <% if @article.errors.any? %>

    <div id="error_explanation">
        <h2>
          <%= plurailize(@article.errors.count, "error") %> probibited
          this article being saved:
        </h2>
    </div>

    <ul>
        <% @article.errors.full_messages do |msg| %>
          <li>  <%= msg %>  </li>
        <% end %>
    </ul>

  <% end %>

  <p>
    <%= f.label :title %> <br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %> <br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
